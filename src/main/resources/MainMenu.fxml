<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import com.comp2042.view.panel.MusicPlayerPanel?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>

<VBox alignment="CENTER" spacing="20.0" styleClass="main-menu" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.comp2042.controller.MainMenuController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <HBox alignment="CENTER" spacing="2.0">
        <Text text="T" fill="#00FFFF" styleClass="title-label">
            <font>
                <Font name="System Bold" size="48.0" />
            </font>
        </Text>
        <Text text="E" fill="#9370DB" styleClass="title-label">
            <font>
                <Font name="System Bold" size="48.0" />
            </font>
        </Text>
        <Text text="T" fill="#FF1493" styleClass="title-label">
            <font>
                <Font name="System Bold" size="48.0" />
            </font>
        </Text>
        <Text text="R" fill="#FFD700" styleClass="title-label">
            <font>
                <Font name="System Bold" size="48.0" />
            </font>
        </Text>
        <Text text="I" fill="#32CD32" styleClass="title-label">
            <font>
                <Font name="System Bold" size="48.0" />
            </font>
        </Text>
        <Text text="S" fill="#FF8C00" styleClass="title-label">
            <font>
                <Font name="System Bold" size="48.0" />
            </font>
        </Text>
    </HBox>
   
    <Button fx:id="startButton" mnemonicParsing="false" onAction="#onStartGame" text="START GAME" styleClass="menu-button" prefWidth="200"/>
    <Button fx:id="settingsButton" mnemonicParsing="false" onAction="#onSettings" text="SETTINGS" styleClass="menu-button" prefWidth="200"/>
    <Button fx:id="quitButton" mnemonicParsing="false" onAction="#onQuit" text="QUIT" styleClass="menu-button" prefWidth="200"/>
    
    <!-- Music Player at bottom of menu -->
    <Region VBox.vgrow="ALWAYS"/>
    <MusicPlayerPanel fx:id="musicPlayerPanel"/>
    
    <stylesheets>
        <URL value="@window_style.css"/>
    </stylesheets>
</VBox>
